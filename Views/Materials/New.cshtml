@model Eventy.ViewModels.NewMaterialViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Material</h2>

@using (Html.BeginForm("Create", "Materials"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Material.Name)
        @Html.TextBoxFor(m => m.Material.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Material.DateAdded)
        @Html.TextBoxFor(m => m.Material.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Material.PricePerDay)
        @Html.TextBoxFor(m => m.Material.PricePerDay, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Material.Quantity)
        @Html.TextBoxFor(m => m.Material.Quantity, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Material.IsAvailable)
        @Html.CheckBoxFor(m => m.Material.IsAvailable, new { @class = "checkbox" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Material.CategoryId)
        @Html.DropDownListFor(m => m.Material.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
    </div>
}